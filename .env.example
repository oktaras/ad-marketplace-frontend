# =============================================================================
# Ads Marketplace Frontend Environment (Railway)
# =============================================================================

# Backend API base URL (must include /api)
VITE_API_URL=https://<backend-domain>/api

# TON Connect manifest URL (optional).
# If omitted, frontend will use: ${VITE_API_URL}/tonconnect-manifest.json
VITE_TON_CONNECT_MANIFEST_URL=https://<backend-domain>/api/tonconnect-manifest.json
VITE_TON_NETWORK=testnet

# Feature flags
VITE_ENABLE_ANALYTICS=false
VITE_FEATURE_CHANNEL_ANALYTICS=true
VITE_FEATURE_TON_ESCROW=true
VITE_DEAL_CHAT_DELETE_TOPICS_ON_CLOSE=true

# Currency config
VITE_SUPPORTED_CURRENCIES=TON
VITE_DEFAULT_CURRENCY=TON

# Optional UI override
# VITE_FORCE_THEME=light
