{
  auto_https off
}

:{$PORT}

root * /srv

# Long cache for fingerprinted assets, no-cache for index shell.
@static {
  path *.js *.css *.png *.jpg *.jpeg *.gif *.svg *.webp *.woff *.woff2 *.ttf *.eot
}
header @static Cache-Control "public, max-age=31536000, immutable"
header /index.html Cache-Control "no-cache"

encode gzip zstd

# SPA fallback for React Router.
try_files {path} /index.html
file_server
